{
  "name": "gqljobsserver",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"yarn dev:node\" \"yarn generate:watch\"",
    "dev:node": "nodemon --watch \"src/**\" --ext \"ts,json,graphql\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node --project tsconfig.json src/index.ts\"",
    "build": "yarn build:clean && yarn build:ts && yarn build:copy",
    "build:clean": "rm -rf ./build",
    "build:ts": "tsc",
    "build:copy": "./copy.assets.sh",
    "start": "node ./build/index.js",
    "generate": "graphql-codegen",
    "generate:watch": "graphql-codegen --watch",
    "lint": "eslint src/**/*.ts",
    "pretty": "prettier src/**/*.ts"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.3.3",
    "@graphql-tools/load": "^7.5.0",
    "apollo-server-core": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.2",
    "graphql": "^16.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mailgun-js": "^0.22.0",
    "mongoose": "^6.1.2",
    "nodemon": "^2.0.15",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.3.0",
    "@graphql-codegen/typescript": "^2.4.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/ejs": "^3.1.0",
    "@types/lodash": "^4.14.178",
    "@types/mailgun-js": "^0.22.12",
    "@types/node": "^17.0.0",
    "@types/validator": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
